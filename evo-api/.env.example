# Evolution API 的 全域金鑰 (Global API Key)
AUTHENTICATION_API_KEY=sixteen_api_key

# Server Configuration
SERVER_URL=http://localhost:8080
DEL_INSTANCE=false

# ==========================================
# Database Configuration (PostgreSQL)
# ==========================================
# 這裡定義帳號密碼，供 docker-compose 讀取
POSTGRES_USER=evolution
POSTGRES_PASSWORD=evolution_password_123
POSTGRES_DB=evolution

DATABASE_ENABLED=true
DATABASE_PROVIDER=postgresql

# 注意：這裡我改用了環境變數組合，並將 host 改為 'postgres'，port 改為 '5432'
# 這是因為在 Docker 網路內部，必須用容器名稱和內部 port 連線
DATABASE_CONNECTION_URI=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public

DATABASE_SAVE_DATA_INSTANCE=true
DATABASE_SAVE_DATA_NEW_MESSAGE=true
DATABASE_SAVE_MESSAGE_UPDATE=true
DATABASE_SAVE_DATA_CONTACTS=true
DATABASE_SAVE_DATA_CHATS=true
DATABASE_SAVE_DATA_LABELS=true
DATABASE_SAVE_DATA_HISTORIC=true
DATABASE_CONNECTION_CLIENT_NAME=evolution_v2

# Redis Cache Configuration
CACHE_REDIS_ENABLED=true
# Redis 也建議改用服務名稱 'redis'
CACHE_REDIS_URI=redis://redis:6379/0
CACHE_REDIS_PREFIX_KEY=evolution_v2
CACHE_REDIS_SAVE_INSTANCES=false
CACHE_LOCAL_ENABLED=false

# RabbitMQ (Disabled)
RABBITMQ_ENABLED=false

# S3 Storage (Disabled)
S3_ENABLED=false

# WhatsApp Configuration
CONFIG_SESSION_PHONE_VERSION=2.3000.1031221906

# Cleanup Settings
CLEAN_STORE_CLEANING_INTERVAL=7200
CLEAN_STORE_MESSAGES=true
CLEAN_STORE_MESSAGE_UP_TO=false
CLEAN_STORE_CONTACTS=true
CLEAN_STORE_CHATS=true