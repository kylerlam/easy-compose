# 1. HTTP 自動跳轉 HTTPS
server {
    listen 80;
    server_name wsbot.your-domain.com;  # ⚠️ 請改成你的域名
    return 301 https://$host$request_uri;
}

# 2. HTTPS 服務配置
server {
    listen 443 ssl;
    server_name wsbot.your-domain.com;  # ⚠️ 請改成你的域名

    # 證書路徑
    ssl_certificate     /etc/nginx/certs/your-domain.pem;
    ssl_certificate_key /etc/nginx/certs/your-domain.key;

    # 安全優化
    ssl_protocols       TLSv1.2 TLSv1.3;
    ssl_ciphers         HIGH:!aNULL:!MD5;

    # 日誌（方便排錯）
    access_log /var/log/nginx/evolution_access.log;
    error_log  /var/log/nginx/evolution_error.log;

    location / {
        # 反代指向 Evolution API 容器
        proxy_pass http://evolution_api:8080;

        # === 核心配置：WebSocket 支持 (Evolution API 需要) ===
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        # ==================================================

        # 標準 Header 傳遞
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
