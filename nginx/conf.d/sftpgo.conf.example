# 1. HTTP 自動跳轉 HTTPS
server {
    listen 80;
    server_name sftpgo.your-domain.com;  # ⚠️ 請改成你的域名
    return 301 https://$host$request_uri;
}

# 2. HTTPS 服務配置
server {
    listen 443 ssl;
    server_name sftpgo.your-domain.com;  # ⚠️ 請改成你的域名

    # 證書路徑
    ssl_certificate     /etc/nginx/certs/your-domain.pem;
    ssl_certificate_key /etc/nginx/certs/your-domain.key;

    # 安全優化
    ssl_protocols       TLSv1.2 TLSv1.3;
    ssl_ciphers         HIGH:!aNULL:!MD5;

    location / {
        # 反代指向 SFTPGo Web 管理界面
        proxy_pass http://sftpgo:8080;

        # 不限制上傳文件大小（SFTPGo 檔案管理需求）
        client_max_body_size 0;

        # === 核心配置：WebSocket 支持 ===
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $http_connection;
        # ===============================

        # 標準 Header 傳遞
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # 性能優化：禁用緩衝，支持串流傳輸
        proxy_buffering off;
        proxy_cache off;
        chunked_transfer_encoding off;

        # 長連接超時（大檔案傳輸需要）
        proxy_read_timeout 3600s;
        proxy_send_timeout 3600s;
    }
}
